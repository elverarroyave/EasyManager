            </sqlCheck>
        </preConditions>
        <insert tableName="role">
            <column name="id" valueNumeric="3"/>
            <column name="name" value="VENDEDOR"/>
            <column name="description" value="Usuario encargado de las ventas"/>
            <column name="state" value="true"/>
        </insert>
    </changeSet>

    <changeSet author="elverarroyave" id="insert-role-4">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(1)
                FROM role
                WHERE id = 4
            </sqlCheck>
        </preConditions>
        <insert tableName="role">
            <column name="id" valueNumeric="4"/>
            <column name="name" value="RECEPTOR"/>
            <column name="description" value="Usuario encargado de las ventas"/>
            <column name="state" value="true"/>
        </insert>
    </changeSet>
</databaseChangeLog>